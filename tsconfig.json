{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "outDir": "dist/cjs",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "module": "ESNext"
  },
  "include": ["src/**/*", "__test__/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "dist"]
}
